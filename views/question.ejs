<%- include ('./partials/header.ejs') %>

<div class="content">
    <div class="questionDiv" id="<%=num%>" data-question="<%=num%>">
        <p><%= data['question'] %></p>
        <form method="POST" action="/questions/<%=num %>">
            <% data['incorrect'].forEach(string => { %>
                <div  class="form-check">
                    <input class="form-check-input" type="radio" name="answer" id="exampleRadios1" value="<%= string %>">
                    <label class="form-check-label" for="exampleRadios1">
                    <%= string %> 
                    </label>
                </div>
            <% }) %>           
            <div  class="form-check">
                <input class="form-check-input" type="radio" name="answer" id="exampleRadios1" value="<%= data['correct'] %>">
                <label class="form-check-label" for="exampleRadios1">
                   <%= data['correct']%> 
                </label>
            </div>
        </br>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>    
    </div> 
</div>

<%- include ('./partials/footer.ejs') %>
